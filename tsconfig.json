{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "experimentalDecorators": true,
        "declaration": true,
        "removeComments": true,
        "preserveConstEnums": true,

        "isolatedModules": false,
        "sourceMap": true,      
                
        "moduleResolution": "node",
        "baseUrl": "src",
        "lib": [  
            "es2017",
            "dom",
            "esnext.asynciterable"
        ],
        "paths": {
        },
        "outDir": "dist"
        /* "outFile": "dist/ct.js" */
    },
    "include": [     
        "./src/canvastools/ts/**/*.ts",
        "./types/**/*.d.ts"
    ],
    "exclude": [     
        "./src/canvastools/ts/**/*.spec.ts",
        "./src/canvastools/ts/**/*.spec.js"
    ]
}
